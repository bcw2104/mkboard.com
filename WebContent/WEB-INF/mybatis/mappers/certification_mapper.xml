<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
														"HTTP://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.codeplayground.mapper.CertificationMapperInferface">

	<resultMap type="certificationDTO" id="certificationDTO">
		<id column="user_id" property="userId"/>
		<id column="key" property="key"/>
		<result column="expiry" property="expiry" javaType="java.sql.Timestamp"/>
	</resultMap>

	<select id="selectOnebyId" parameterType="String" resultMap="certificationDTO">
		SELECT * FROM tbl_certification WHERE user_id = #{userId}
	</select>

	<insert id="insert" parameterType="certificationDTO">
		INSERT INTO tbl_certification VALUES(#{userId},#{key},#{expiry})
	</insert>

	<delete id="delete" parameterType="certificationDTO" >
		DELETE FROM tbl_certification WHERE user_id = #{userId} AND key = #{key}
	</delete>
</mapper>