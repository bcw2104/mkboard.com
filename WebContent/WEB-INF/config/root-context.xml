<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
										http://www.springframework.org/schema/beans/spring-beans.xsd
										http://www.springframework.org/schema/context
										http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- service beans -->
	<bean class="com.codeplayground.service.AccountService" lazy-init="true"  />
	<bean class="com.codeplayground.service.UserService" lazy-init="true" />
	<bean class="com.codeplayground.service.CategoryService" lazy-init="true" />
	<bean class="com.codeplayground.service.BoardService" lazy-init="true"  />
	<bean class="com.codeplayground.service.PostService" lazy-init="true"  />
	<bean class="com.codeplayground.service.CommentService" lazy-init="true"  />

	<!-- Util beans -->
	<bean class="com.codeplayground.util.Tools" lazy-init="true"  />

</beans>
